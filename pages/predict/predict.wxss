.button_share {
    width: 150rpx;
    height: 100rpx;
    position: fixed;
    top: 500rpx;
    right: 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fea128;
    color: white;
    border-radius: 50rpx 0rpx 0rpx 50rpx;
  }
  
  .view_main {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  
  .image_type {
    margin-top: 50rpx;
    height: 700rpx;
    width: 90%;
    border-radius: 25rpx;
    box-shadow: rgba(0, 0, 0, 0.2) 0 10rpx 20rpx;
  }
  
  .button_type {
      right: 0;
      bottom: 0;
      box-sizing: border-box;
      margin: 10px;
      padding: 40rpx;
      width: 150rpx;
      height: 150rpx;
      border-radius: 50%;
      background-color: #17862B;
      box-shadow: rgba(0, 0, 0, 0.2) 0 10rpx 20rpx;
  }
  
  .view_items {
    margin-bottom: 100rpx;
    
    width: 90%;
    display: flex;
    align-items: center;
    flex-direction: column;
    
  }
  
  .view_item {
    width: 100%;
    height: 150rpx;
    margin-top: 25rpx;
    background-color: white;
    display: flex;
    align-items: center;
    flex-direction: column;
    padding: 20rpx;
    border-radius: 25rpx;
    /* box-shadow: 1.5px 1.5px 1.5px grey; */
    box-shadow: rgba(0, 0, 0, 0.2) 0 10rpx 20rpx;
  }
  
  .text_main {
    margin-left: 50rpx;
    margin-top: 20rpx;
    color: #000000;
    font-weight: 700;
    width: 100%;
    font-size: 35rpx;
  }
  
  .text_son {
    margin-left: 50rpx;
    margin-top: 20rpx;
    color: #000000;
    width: 100%;
    font-size: 30rpx;
  }
  